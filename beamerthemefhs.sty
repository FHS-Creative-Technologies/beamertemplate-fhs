\newlength{\fhs@frame@frametitleheight}
\setlength{\fhs@frame@frametitleheight}{.178\paperheight}

\newlength{\fhs@frame@footlineheight}
\setlength{\fhs@frame@footlineheight}{.1\paperheight}

